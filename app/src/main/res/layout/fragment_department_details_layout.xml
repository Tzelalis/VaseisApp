<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/main_toolbar"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/departmentRecyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_layout"
        tools:itemCount="1"
        tools:listitem="@layout/item_departments_comparison" />

    <LinearLayout
        android:id="@+id/scrollArrowsLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/lineChart"
        app:layout_constraintBottom_toTopOf="@id/lineChart"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/forwordImageViwe"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="0dp"
            android:src="@drawable/ic_baseline_arrow_left_24"/>

        <ImageView
            android:id="@+id/circleImageViwe"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:padding="0dp"
            android:src="@drawable/ic_baseline_circle_24"/>

        <ImageView
            android:id="@+id/previousImageViwe"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="0dp"
            android:src="@drawable/ic_baseline_arrow_right_24"/>
    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintDimensionRatio="4:3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/departmentRecyclerView" />




</androidx.constraintlayout.widget.ConstraintLayout>