<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_grap"
    android:label="Departments"
    app:startDestination="@id/departmentFragment">

    <fragment
        android:id="@+id/departmentFragment"
        android:name="com.example.vaseisapp.ui.department.DepartmentFragment"
        android:label="DepartmentFragment"
        tools:layout="@layout/fragment_department_layout">
        <action
            android:id="@+id/action_departmentFragment_to_departmentDetailsFragment"
            app:destination="@id/departmentDetailsFragment"
            app:enterAnim="@anim/expand_in"
            app:exitAnim="@anim/pop_exit_anim"
            app:popEnterAnim="@anim/expand_in"
            app:popExitAnim="@anim/pop_exit_anim"
            app:popUpTo="@id/departmentFragment">

        </action>
    </fragment>
    <fragment
        android:id="@+id/departmentDetailsFragment"
        android:name="com.example.vaseisapp.ui.departmentdetails.DepartmentDetailsFragment"
        android:label="Comparation"
        tools:layout="@layout/fragment_department_details_layout">
        <argument
            android:name="code"
            android:defaultValue="-1L"
            app:argType="string" />
        <argument
            android:name="name"
            android:defaultValue=""
            app:argType="string" />
    </fragment>
</navigation>