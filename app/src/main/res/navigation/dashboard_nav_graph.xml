<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_grap"
    android:label="Departments"
    app:startDestination="@id/departmentFragment">

    <fragment
        android:id="@+id/departmentFragment"
        android:name="com.example.vaseisapp.ui.dashboard.departmentcenter.department.DepartmentFragment"
        android:label="DepartmentFragment"
        tools:layout="@layout/fragment_department_layout">
        <action
            android:id="@+id/action_department_to_departmentDetails"
            app:destination="@id/departmentDetailsFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/departmentFragment" />
        <action
            android:id="@+id/action_department_to_account"
            app:destination="@id/accountFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/main_nav_grap"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_department_to_topics"
            app:destination="@id/topicsFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/main_nav_grap"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_department_to_Calculator"
            app:destination="@id/fragmentCalculator"
            app:launchSingleTop="true"
            app:popUpTo="@id/main_nav_grap"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/departmentDetailsFragment"
        android:name="com.example.vaseisapp.ui.dashboard.departmentcenter.departmentdetails.DepartmentDetailsFragment"
        android:label="Comparation"
        tools:layout="@layout/fragment_department_details_layout">
        <argument
            android:name="departments"
            app:argType="com.example.vaseisapp.ui.dashboard.departmentcenter.departmentdetails.model.DepartmentDetailsArguments[]" />
    </fragment>
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.vaseisapp.ui.dashboard.accountcenter.AccountFragment"
        android:label="AccountFragment"
        tools:layout="@layout/fragment_account">
        <action
            android:id="@+id/action_account_to_department"
            app:destination="@id/departmentFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/main_nav_grap"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_account_to_Calculator"
            app:destination="@id/fragmentCalculator"
            app:launchSingleTop="true"
            app:popUpTo="@id/main_nav_grap"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_account_to_topics"
            app:destination="@id/topicsFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/main_nav_grap"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/fragmentCalculator"
        android:name="com.example.vaseisapp.ui.dashboard.calculator.CalculatorFragment"
        android:label="FragmentCalculator"
        tools:layout="@layout/fragment_calculator">
        <action
            android:id="@+id/action_Calculator_to_topics"
            app:destination="@id/topicsFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/main_nav_grap"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_Calculator_to_account"
            app:destination="@id/accountFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/main_nav_grap"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_Calculator_to_department"
            app:destination="@id/departmentFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/main_nav_grap"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/topicsFragment"
        android:name="com.example.vaseisapp.ui.dashboard.topicscenter.TopicsFragment"
        android:label="TopicsFragment"
        tools:layout="@layout/fragment_topics">
        <action
            android:id="@+id/action_topics_to_account"
            app:destination="@id/accountFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/main_nav_grap"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_topics_to_Calculator"
            app:destination="@id/fragmentCalculator"
            app:launchSingleTop="true"
            app:popUpTo="@id/main_nav_grap"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_topics_to_department"
            app:destination="@id/departmentFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/main_nav_grap"
            app:popUpToInclusive="true"/>
    </fragment>
</navigation>